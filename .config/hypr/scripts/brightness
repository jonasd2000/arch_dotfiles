value="$1"

brightnessctl s "$value"

current_brightness="$(brightnessctl g)"
max_brightness="$(brightnessctl m)"

current_brightness_perc="$(echo "scale=0; 100 * $current_brightness / $max_brightness" | bc)"

notify-send "${current_brightness_perc}%" -h string:x-canonical-private-synchronous:brightness-notification -h int:value:"$current_brightness_perc" --app-name "Brightness" --urgency low

